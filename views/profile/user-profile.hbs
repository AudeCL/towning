<body>
    <section id="user-profile">
        <h3><a href="/">towning</a></h3>

        <article id="profile-menu">
            <div class="profile-buttons">
                <button id="profile-btn-profile">PROFILE</button>
                <button id="profile-btn-traveller">MY TRAVELLER EXPERIENCE</button>
                <button id="profile-btn-hote">MY HOTE EXPERIENCE</button>
            </div>

            <div id="search-button">
                <a href="/">Start a new search now!</a>
            </div>
        </article>

        <article id="profile-content" style="display: block">
            <div class="profile-content-picture">
                <img class="userpicture" width="150px" src="{{user.userPicture}}" alt="Profile picture"/>
            </div>
            <div class="profile-content-username">
                Name {{user.userName}}
            </div>
            <div class="profile-content-location">
                Location {{user.userLocation}}
            </div>
            <div class="profile-content-age">
                Age {{user.userAge}}
            </div>
            <div class="profile-content-description">
                Description {{user.userDesc}}
            </div>
            <div>
                <a href="/user-profile/edit">Edit the profile</a>
            </div>
        </article>

        <article id="profile-experience-traveller" style="display: none">
            <div class="profile-content-picture">
                <img class="userpicture" width="150px" src="{{user.userPicture}}" alt="Profile picture"/>
            </div>
            <div class="profile-content-username">
                Name {{user.userName}}
            </div>
            <div class="profile-content-location">
                Location {{user.userLocation}}
            </div>
            <div class="profile-experience-traveller-reviews">
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                4 reviews
            </div>
            <div class="profile-experience-traveller-cards">
                {{#if travellerExperience}}
                <ul>
                    <li>
                        Location {{experience.experienceLocation}}
                        Location {{travellerExperience.experienceLocation}}
                        <img class="experience-picture" width="150px" src="/images/towning-pictures/ExperienceCartoon.jpg" alt="Experience image"/>
                    </li>
                </ul>
                {{else}}
                <p>No experience yet!</p>
                {{/if}}
            </div>
        </article>

        <article id="profile-experience-hote" style="display: none">
            <div class="profile-content-picture">
                <img class="userpicture" width="150px" src="{{user.userPicture}}" alt="Profile picture"/>
            </div>
            <div class="profile-content-username">
                Name {{user.userName}}
            </div>
            <div class="profile-content-location">
                Location {{user.userLocation}}
            </div>
            <div class="profile-experience-hote-reviews">
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                2 reviews
            </div>
            <div class="profile-experience-hote-cards">
                {{#if hoteExperience}} <!--if user est hote d'une experience(experience.user_id), alors afficher carte avec nom expÃ©rience-->
                <ul>
                    <li>
                        Location {{experience.experienceLocation}}
                        <img class="experience-picture" width="150px" src="/images/towning-pictures/ExperienceCartoon.jpg" alt="Experience image"/>
                    </li>
                </ul>
                {{else}}
                <p>No experience yet!</p>
                {{/if}}
            </div>
        </article>

    </section>

<script src="/public/js/script.js"></script>
</body>
