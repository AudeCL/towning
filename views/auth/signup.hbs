<body>
    <section id="signup-page">

        <div id="signup-left">
            <img src="images/towning-pictures/signup.jpeg" alt="Welcome to towning">
        </div>

        <div id="signup-right">
            <a href="/">← Back to homepage</a>

            <h2>Sign Up</h2>

            <form action="/signup" method="POST">
                <label for="username">
                    Full Name
                    <input type="text" name="username" class="form-input">
                </label>

                <label for="useremail">
                    Email
                    <input type="text" name="useremail" class="form-input">
                </label>

                <label for="userpwd">
                    Password
                    <input type="password" name="userpwd" class="form-input">
                </label>

                <label for="userpwdrepeat">
                    Repeat Password
                    <input type="password" name="userpwdrepeat" class="form-input">
                </label>

                <label for="signedTerms">
                    <input type="checkbox" name="signedTerms" value="yes">
                    I agree to the <a href="">Conditions of Use</a>
                </label>

                <button class="form-btn">Sign Up</button>
            </form>

            <div id="signup-error">
                {{#if errorMessage}}
                <p>{{errorMessage}}</p>
                {{/if}}
            </div>

            <a href="/login">Log in →</a>
        </div>

        

    </section>

</body>