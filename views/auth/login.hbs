<body>
    <section id="login-page">

        <div id="login-left">
            <img src="images/towning-pictures/login.jpeg" alt="Welcome to towning">
        </div>

        <div id="login-right">
            <a href="/">← Back to homepage</a>

            <h2>Log In</h2>

            <form action="/login" method="POST">
                <label for="useremail">
                    Email
                    <input type="text" placeholder="Email address..." name="useremail">
                </label>

                <label for="userpwd">
                    Password
                    <input type="password" placeholder="*********************" name="userpwd">
                </label>

                <button>Log In</button>
            </form>

            <div id="login-error">
                {{#if errorMessage}}
                <p>{{errorMessage}}</p>
                {{/if}}
            </div>

            <a href="">Forgot your password?</a>

            <a href="/login">Sign up →</a>
        </div>
    </section>
</body>